{
  "compilerOptions": {
    "target": "ES2022",

    "lib": ["ES2022"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "noEmitOnError": false
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
